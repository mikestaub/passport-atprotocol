{
    "compilerOptions": {
      "module": "esnext",
      "noImplicitAny": false,
      "removeComments": false,
      "declaration": true,
      "preserveConstEnums": true,
      "outDir": "./dist",
      "sourceMap": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "esModuleInterop": true
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
    ]
  }